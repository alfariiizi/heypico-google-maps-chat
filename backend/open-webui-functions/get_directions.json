{
  "name": "get_directions",
  "description": "Get directions and route information between two locations. Use this when the user asks for directions, routes, or how to get somewhere.",
  "parameters": {
    "type": "object",
    "properties": {
      "origin": {
        "type": "string",
        "description": "Starting location (address or coordinates)"
      },
      "destination": {
        "type": "string",
        "description": "Destination location (address or coordinates)"
      },
      "mode": {
        "type": "string",
        "enum": ["driving", "walking", "bicycling", "transit"],
        "description": "Travel mode (default: driving)"
      }
    },
    "required": ["origin", "destination"]
  }
}
